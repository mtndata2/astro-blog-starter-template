---
import HeaderLink from './HeaderLink.astro';
// import { SITE_TITLE } from '../consts'; // You can use hardcoded "Nairatoday" instead
---
<header>
  <meta charset="UTF-8" />
  <nav>
    <h2><a href="/">Nairatoday</a></h2>
   <link rel="icon" href="/naira-icon.jpg" type="image/jpeg">
<title>Today's Exchange Rates - USD, EUR, GBP to Naira Black Market Rates</title>
  <meta name="description" content="Check the latest black market exchange rates for US Dollar (USD), Euro (EUR), and British Pound (GBP) to Nigerian Naira. Stay updated daily.">
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
    <div class="social-links">
      <!-- Social icons here as before... -->
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: #166a39;
    color: #fff;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }
  h2 a, h2 a.active {
    text-decoration: none;
    color: #fff;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .internal-links a {
    color: #fff;
    border-bottom: 4px solid transparent;
    transition: border-bottom 0.2s;
  }
  .internal-links a.active {
    border-bottom-color: #e6f4ea;
  }
  nav a:hover {
    color: #e6f4ea;
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
